<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.ccl.perfectisshit.nestedscrolling.widget.NestedScrollingLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@id/id_nested_scrolling_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mine_background"/>

        <com.ccl.perfectisshit.nestedscrolling.widget.ViewPagerIndicator
            android:id="@+id/vpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.ccl.perfectisshit.nestedscrolling.widget.NestedScrollingLinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        >
        <com.org.ccl.roundrectimageview.view.RoundRectImageView
            android:id="@+id/rei_category"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/category"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

        <com.org.ccl.roundrectimageview.view.RoundRectImageView
            android:layout_toLeftOf="@+id/rei_category"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/email"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="æˆ‘"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    
</RelativeLayout>